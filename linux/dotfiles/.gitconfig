[user]
	name = Russell Bunch
	email = rbunch@4lambda.io

[push]
	default = simple

[core]
	autocrlf = input
	editor = vim
	excludesfile = /Users/rbunch/.gitignore

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[commit]
	template = /Users/rbunch/.stCommitMsg

[alias]
	r = !GIT_NO_PAGER=1 git l -30
	l = "!. ~/.githelpers && pretty_git_log"
[color]
	ui = auto

[color "branch"]
	current = yellow
	local = 241
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green

[color "status"]
	added = green
	changed = yellow
	untracked = magenta
